#include <iostream>
#include <vector>

int main() {
int even = 0;
int odd = 1;
int i;
std::vector<int> num = {5,2,3,4,6,7};
for (i = 0; i < num.size(); i ++) {
  if (num[i] % 2 == 0){
    even = num[i] + even;
  } if (num[i] % 2 != 0) {
   odd = num[i] * odd;
  }
}
  std::cout << "Sum of even numbers is " << even << ".\n";
  std::cout << "Product of odd numbers is " << odd << ".\n";
}
